        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PH4_WPF.FrmSoft"
        mc:Ignorable="d"
         WindowStyle="None"        
        ResizeMode="NoResize"
        Title="FrmError" Height="208" Width="660" Background="#FF748499" WindowStartupLocation="CenterScreen">
