        <Button x:Name="RunButton" Content="ДА" HorizontalAlignment="Left" Margin="351,174,0,0" VerticalAlignment="Top" Width="119" FontSize="14" Background="#FF627288" Foreground="#FF322D2D" FontWeight="Bold" BorderBrush="#FF025AB9" Click="КнопкаRun" Visibility="Hidden"/>




    </Grid>
    <Window.Effect >
        <DropShadowEffect BlurRadius="10" Direction="-90" RenderingBias="Performance" ShadowDepth="2" Opacity="0.8"/>
    </Window.Effect>
</Window>
